<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name = "search_view_id" ref="om_hospital.view_hospital_doctor_search"/> -->
        <field name="context"></field>
    </record>

    <menuitem id="menu_doctors" name="Doctors" parent="menu_hospital_master" action="action_hospital_doctor"
        sequence ="10" />


    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="display: flex; align-items: center; width: 100%;">
                        <div style="flex: 1; display: flex; align-items: center;">
                            <label for="name" class="oe_edit_only" />
                            <h1 style="margin: 0;">
                                <field name="name" />
                            </h1>
                        </div>
                        <div class="oe_right" style="flex: 1; display: flex; justify-content: flex-end;">
                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [128, 128]}" />
                        </div>
                    </div>
                    <group>
                        <field name="gender"/>
                        <field name="date_of_birth" string="DOB" />
                        <field name="age" string="Age" readonly="1" />
                        <field name="capitalized_name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.doctor</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name ="ref"/>
                <field name ="name"/>
                <field name = "capitalized_name"/>
                <field name="date_of_birth" string="DOB" />
                <field name="age" string="Age" readonly="1" />
                <field name ="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <!-- <field name ="name" filter_domain ="['|',('name','ilike', self),('ref','ilike', self)]"/> -->
                <field name ="name"/>
                <field name ="gender"/>
                <field name ="ref"/>

                <!-- <filter name ="filter_male" string = "Male" domain="[('gender', '=', 'male')]"/>
                <filter name ="filter_female" string = "Female" domain="[('gender', '=', 'female')]"/>
                <filter name ="filter_others" string = "Others" domain="[('gender', '=', 'others')]"/>

                <group expand ="0" string ="Group By...">
                    <filter name ="group_by_gender" string = "Gender" context ="{'group_by':'gender'}"/>
                </group> -->
            </search>
        </field>
    </record>




</odoo>
